extends layoutB

block content
    section(class="section is-small")
        div(class="columns")
            div(class="column is-half is-offset-one-quarter")
                form(class="box")
                    h1(class="title") Sign in to My Books
                    div(class="field")
                        label(class="label") Username
                        div(class="control has-icons-left has-icons-right")
                            input(
                                class="input is-success"
                                type="text"
                                placeholder="Text input"
                            )
                            span(class="icon is-small is-left")
                                i(class="fas fa-user")
                            span(class="icon is-small is-right")
                                i(class="fas fa-check")
                        p(class="help is-success") This username is available

                    div(class="field")
                        label(class="label") Password
                        div(class="control has-icons-left has-icons-right")
                            input(
                                class="input is-danger"
                                type="password"
                                placeholder="Enter password"
                            ) 
                            span(class="icon is-small is-left")
                                i(class="fas fa-envelope")
                            span(class="icon is-small is-right")
                                i(class="fas fa-exclamation-triangle")
                        p(class="help is-danger") This password is invalid

                    div(class="field is-grouped")
                        div(class="control")
                            button(class="button is-success") Sign in           
                    a(href="/signup") Not a member? Sign up here!
        h1 #{title}