extends layoutB

block content
    div(class="columns")
        div(class="column is-one-quarter")
            section(class="section")
                figure(class="image is-128x128")
                    img(class="is-rounded" src="data:" + profile_pic.contentType + ";base64," + profile_pic.data.toString('base64'))
            section(class="section user-name")
                h1(class="title user-name") #{username}    
        div(class="column")
            section(class="section")
                nav(class="level")
                    div(class="level-left")
                        h1(class="title") #{username}'s Books 
                    div(class="level-right")    
                        div(class="buttons")
                            a(class="button is-primary" href="/addBook") Add Review
            
            div(class="card")
                header(class="card-header")
                    p(class="card-header-title") Book Title
                div(class="card-content")
                    div(class="columns")
                        div(class="column is-one-quarter")
                            figure(class="image is-128x128")
                                img(src="images/IMG_3584.JPG")
                        div(class="column")
                            div(class="content")
                                | This is the review of the book. It can be long or short;
                                | write as much as you desire!
            each book in user_books
                div(class="card")
                    header(class="card-header")
                        p(class="card-header-title") #{book.title}
                    div(class="card-content")
                        div(class="columns")
                            div(class="column is-one-quarter")
                                figure(class="image is-128x128")
                                    img(src="data:" + book.bookimg.contentType + ";base64," + book.bookimg.data.toString('base64'))
                            div(class="column")
                                div(class="content")
                                    p(class="subtitle is-6") #{book.author}
                                    div(class="main-stars columns is-gapless is-mobile is-narrow")
                                        - for(var i=0; i< book.rating; i++) {
                                            div(class="column is-narrow")
                                                img(class="image is-16x16" src="../images/star-img1.jpeg")
                                        - }
                                div(class="content")
                                    | #{book.comment}